  }
.red{
     width:30%;
     line-height:100rpx;
     text-align:center;
     color:#fc5558;
     font-weight: 600;
     font-size:28rpx;
     flex:1;
     /* border-right:1px solid gainsboro; */
     /* border-bottom:5rpx solid red; */
    position: relative;
  }
.red:after{
    content: '';
    position: absolute; 
    width: 50%;
    height: 3px;
    left: 25%;
    bottom: 0; 
    background-color: #F47050;

}

