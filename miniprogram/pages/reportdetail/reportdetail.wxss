input{
  display: block;
  width:80%;
  height:60rpx;
  padding:10rpx;
  border:1px solid ; 
  margin:20rpx auto; 
  text-align: left;
  border-radius: 10rpx;
  border: 1px solid rgba(200,200,200,.5);
}

textarea{
  border-radius: 10rpx;
